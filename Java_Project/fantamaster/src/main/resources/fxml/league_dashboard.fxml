<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<VBox spacing="0" style="-fx-background-color: #f8fafc;" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.LeagueDashboardController">
    
    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <StackPane style="-fx-background-color: #f1f5f9; -fx-background-radius: 10; -fx-padding: 5;">
                <ImageView fx:id="leagueLogoImageView" fitHeight="60.0" fitWidth="60.0" preserveRatio="true">
                    <Image url="@/images/leagueDefaultPic.png" />
                </ImageView>
            </StackPane>
            <VBox spacing="2">
                <Label fx:id="leagueNameLabel" text="Nome Lega" styleClass="modern-title" style="-fx-font-size: 20px;" />
                <Label text="Panoramica Partecipanti" styleClass="subtitle" />
            </VBox>
        </HBox>
    </VBox>

    <ScrollPane fitToWidth="true" styleClass="modern-scroll" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox fx:id="participantsContainer" spacing="12" style="-fx-padding: 20;">
            </VBox>
    </ScrollPane>
</VBox>