<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="it.camb.fantamaster.controller.StatisticsMenuController"
      style="-fx-background-color: transparent;">

    <Label text="Area Statistiche" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
    <Label text="Seleziona una categoria per visualizzare i dettagli" style="-fx-font-size: 14; -fx-text-fill: #718096;"/>

    <VBox spacing="15" alignment="CENTER" maxWidth="400">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Button text="Classifica Generale" onAction="#goToGeneralRanking" 
                maxWidth="Infinity" prefHeight="60"
                style="-fx-background-color: white; -fx-text-fill: #2d3748; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-background-radius: 10; -fx-cursor: hand;"/>

        <Button text="Storico Punteggi" onAction="#goToScoreHistory" 
                maxWidth="Infinity" prefHeight="60"
                style="-fx-background-color: white; -fx-text-fill: #2d3748; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-background-radius: 10; -fx-cursor: hand;"/>

        <Button text="Punteggi Ultima Giornata" onAction="#goToLastMatchdayScores" 
                maxWidth="Infinity" prefHeight="60"
                style="-fx-background-color: white; -fx-text-fill: #2d3748; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1); -fx-background-radius: 10; -fx-cursor: hand;"/>

        <Button text="Risultati Giornate" onAction="#goToMatchdayResults" 
                maxWidth="Infinity" prefHeight="60"
                style="-fx-background-color: #4a5568; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 1); -fx-background-radius: 10; -fx-cursor: hand;"/>
    </VBox>

</VBox>