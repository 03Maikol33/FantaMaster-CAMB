<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="335.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.MainScreenController">

    <!-- Barra superiore con logo -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #7a0076; -fx-padding: 10;">
            <ImageView fitHeight="36.0" preserveRatio="true">
                <image>
                    <!-- percorso relativo al file FXML: ../images/FantaMaster-logo.png -->
                    <Image url="@../../../../../../../../images/FantaMaster-logo.png" />
                </image>
            </ImageView>
        </HBox>
    </top>

    <!-- Contenuto centrale -->
    <center>
        <StackPane fx:id="contentArea" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>

    <!-- Navigazione inferiore con icone (modifica i nomi dei file se necessario) -->
    <bottom>
        <HBox alignment="CENTER" maxHeight="50.0" spacing="40" style="-fx-background-color: #7a0076; -fx-padding: 10;">
         <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../../../../../../fxml/FantaMaster-logo.png" />
                  </image>
               </ImageView>
               <Button onAction="#showLeghe" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Da Impl" />
            </children>
         </VBox>
         <VBox alignment="TOP_CENTER" layoutX="128.0" layoutY="20.0" prefHeight="200.0" prefWidth="100.0">
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../../../../../../fxml/FantaMaster-logo.png" />
                  </image>
               </ImageView>
               <Button onAction="#showLeghe" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Richieste" />
            </children>
         </VBox>
         <VBox alignment="TOP_CENTER" layoutX="198.0" layoutY="20.0" prefHeight="200.0" prefWidth="100.0">
            <children>
               <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../../../../../../fxml/FantaMaster-logo.png" />
                  </image>
               </ImageView>
               <Button onAction="#showLeghe" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Impostazioni" />
            </children>
         </VBox>
        </HBox>
    </bottom>

</BorderPane>
