<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.camb.fantamaster.controller.LeagueListItemController">

    <!-- Contenuto principale: occupa tutta l'area -->
    <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #7a00766a; -fx-background-radius:5; -fx-border-radius:5; -fx-border-color: #7a0076; -fx-border-width:1;"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <ImageView fx:id="leagueIcon" fitHeight="40" fitWidth="40" preserveRatio="true" />

        <!-- Info -->
        <VBox spacing="5" style="-fx-padding:5;">
            <Label fx:id="leagueName" style="-fx-font-weight: bold; -fx-text-fill: white;" />
            <Label fx:id="creatorName" style="-fx-text-fill: white;" />
            <Label fx:id="participantCount" style="-fx-text-fill: white;" />
        </VBox>

        <!--Scritta admin in alto a destra invisibile-->
        <Label visible="false" fx:id="adminLabel" text="ADMIN" style="-fx-text-fill: white; -fx-font-weight: bold;"
               AnchorPane.topAnchor="5.0" AnchorPane.rightAnchor="5.0" />
    </HBox>
</AnchorPane>
