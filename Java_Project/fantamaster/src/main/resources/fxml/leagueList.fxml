<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:controller="it.camb.fantamaster.controller.LeagueListController"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="600.0" prefWidth="335.0"
            stylesheets="@css/style.css"
            style="-fx-background-color: transparent;">

    <VBox spacing="15" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        
        <HBox alignment="CENTER_LEFT" spacing="15">
            <StackPane>
                <Circle radius="20" fill="#667eea" opacity="0.1"/>
                <Label text="ðŸ†" style="-fx-font-size: 16;"/>
            </StackPane>
            <VBox spacing="2">
                <Label text="Le tue Leghe" styleClass="modern-title"/>
                <Label text="Gestisci le tue leghe" styleClass="subtitle"/>
            </VBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="createLeagueButton" text="+ Crea" styleClass="floating-action-button"
                    onAction="#openCreateLeague" prefHeight="50.0" 
                    HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            
            <Button text="ðŸ”‘ Unisciti" styleClass="floating-action-button"
                    onAction="#handleJoinByCode" prefHeight="50.0" 
                    HBox.hgrow="ALWAYS" maxWidth="Infinity"
                    style="-fx-background-color: #6c757d;"/> 
        </HBox>
        
    </VBox>

    <ScrollPane fx:id="leagueScroll" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                styleClass="modern-scroll" 
                AnchorPane.topAnchor="160.0" AnchorPane.leftAnchor="20.0"
                AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
        <content>
            <VBox fx:id="leagueContainer" spacing="12" style="-fx-padding: 10 0; -fx-background-color: transparent;" />
        </content>
    </ScrollPane>
</AnchorPane>