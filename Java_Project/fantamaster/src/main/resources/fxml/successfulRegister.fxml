      stylesheets="@css/style.css"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">
      
   <center>
      <VBox alignment="CENTER" maxWidth="280.0" spacing="30" BorderPane.alignment="CENTER" styleClass="auth-card">
         <padding>
            <Insets top="40" bottom="40" left="25" right="25"/>
