<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.StatisticsMenuController">

    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox>
            <Label text="Area Statistiche" styleClass="modern-title" style="-fx-font-size: 22px;"/>
            <Label text="Analizza l'andamento della tua lega" styleClass="subtitle" style="-fx-font-size: 12px;"/>
        </VBox>
    </HBox>

    <VBox spacing="12" alignment="TOP_CENTER" maxWidth="450" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="10"/>
        </padding>

        <Button text="Classifica Generale" onAction="#goToGeneralRanking" 
                maxWidth="Infinity" prefHeight="65"
                style="-fx-background-color: white; -fx-text-fill: #2d3748; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-background-radius: 12; -fx-cursor: hand;"/>

        <Button text="Storico Punteggi" onAction="#goToScoreHistory" 
                maxWidth="Infinity" prefHeight="65"
                style="-fx-background-color: white; -fx-text-fill: #2d3748; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-background-radius: 12; -fx-cursor: hand;"/>

        <Button text="Risultati Giornate" onAction="#goToMatchdayResults" 
                maxWidth="Infinity" prefHeight="65"
                style="-fx-background-color: white; -fx-text-fill: #2d3748; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 8, 0, 0, 3); -fx-background-radius: 12; -fx-cursor: hand;"/>
    </VBox>

</VBox>