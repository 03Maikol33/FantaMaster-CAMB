<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.MatchdayDetailController">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                    <Image url="@/icons/back-arrow-black.png" />
                </ImageView>
            </graphic>
        </Button>
        <VBox>
            <Label fx:id="titleLabel" styleClass="modern-title" text="Risultati Giornata" style="-fx-font-size: 20px;" />
            <Label styleClass="subtitle" text="Dettaglio bonus e malus" style="-fx-font-size: 11px;" />
        </VBox>
    </HBox>

    <ScrollPane fitToWidth="true" styleClass="modern-scroll" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox fx:id="eventsContainer" spacing="15" style="-fx-padding: 0 2 10 0;">
            </VBox>
    </ScrollPane>

</VBox>