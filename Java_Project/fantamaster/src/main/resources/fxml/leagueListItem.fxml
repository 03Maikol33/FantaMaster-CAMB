<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.camb.fantamaster.controller.LeagueListItemController"
            stylesheets="@css/style.css">

    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="modern-card" 
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          style="-fx-padding: 10;">
        
        <HBox fx:id="clickableArea" alignment="CENTER_LEFT" spacing="12" HBox.hgrow="ALWAYS" onMouseClicked="#handleLeagueOpening" style="-fx-cursor: hand;">
            <StackPane>
                <Circle radius="22" fill="rgba(102, 126, 234, 0.1)"/>
                <ImageView fx:id="leagueIcon" fitHeight="28" fitWidth="28" preserveRatio="true" />
            </StackPane>

            <VBox spacing="3">
                <Label fx:id="leagueName" style="-fx-font-weight: bold; -fx-font-size: 14; -fx-text-fill: #2d3748;"/>
                <Label fx:id="creatorName" style="-fx-text-fill: #718096; -fx-font-size: 11;"/>
                <Label fx:id="participantCount" style="-fx-text-fill: #a0aec0; -fx-font-size: 10;"/>
                <HBox fx:id="adminBadgeContainer" visible="false" spacing="4" alignment="CENTER_LEFT">
                     <ImageView fitHeight="12" fitWidth="12" preserveRatio="true">
                        <Image url="@/icons/admin-crown-gold.png"/>
                     </ImageView>
                     <Label text="ADMIN" style="-fx-text-fill: #b7791f; -fx-font-size: 9; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
        </HBox>
        
        </HBox>
</AnchorPane>