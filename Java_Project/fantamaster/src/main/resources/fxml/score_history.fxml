<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox spacing="10" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.ScoreHistoryController">
    
    <padding>
        <Insets top="10" right="20" bottom="10" left="20"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                    <Image url="@/icons/back-arrow-black.png" />
                </ImageView>
            </graphic>
        </Button>
        <VBox>
            <Label text="Storico Punteggi" styleClass="modern-title" style="-fx-font-size: 20px;"/>
            <Label text="Dettaglio voti giornata" styleClass="subtitle" style="-fx-font-size: 12px;"/>
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 10 15; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 8, 0, 0, 4);">
        <VBox spacing="2" alignment="CENTER_LEFT">
            <Label text="GIORNATA" styleClass="hint-text" style="-fx-font-weight: bold; -fx-font-size: 10px;"/>
            <ComboBox fx:id="comboGiornata" prefWidth="130" promptText="Scegli..." styleClass="modern-combo" />
        </VBox>
        
        <Region HBox.hgrow="ALWAYS" />

        <VBox alignment="CENTER_RIGHT">
            <Label text="TOTALE" style="-fx-text-fill: #718096; -fx-font-size: 10px; -fx-font-weight: bold;" />
            <Label fx:id="lblTotale" text="0.0" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #16a34a;" />
        </VBox>
    </HBox>

    <Label fx:id="lblWarning" styleClass="error-text" text="Nessuna formazione schierata" visible="false" />

    <TableView fx:id="tableScores" styleClass="modern-card" VBox.vgrow="ALWAYS" style="-fx-background-radius: 12;">
        <columns>
            <TableColumn fx:id="colRuolo" prefWidth="45" style="-fx-alignment: CENTER;" text="R" />
            <TableColumn fx:id="colNome" prefWidth="240" text="Calciatore" />
            <TableColumn fx:id="colFantavoto" prefWidth="90" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="Voto" />
            <TableColumn fx:id="colStato" prefWidth="100" style="-fx-alignment: CENTER;" text="Stato" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>