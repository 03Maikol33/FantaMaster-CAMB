<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.ScoreHistoryController">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2d3748;" text="Storico Punteggi" />

    <HBox alignment="CENTER_LEFT" maxWidth="600" spacing="20">
        <VBox spacing="5">
            <Label style="-fx-text-fill: #718096;" text="Seleziona Giornata:" />
            <ComboBox fx:id="comboGiornata" prefWidth="150" promptText="Scegli..." />
        </VBox>
        
        <VBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 14; -fx-text-fill: #718096;" text="Totale Giornata" />
            <Label fx:id="lblTotale" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #48bb78;" text="0.0" />
        </VBox>
    </HBox>

    <TableView fx:id="tableScores" maxWidth="600" prefHeight="350" style="-fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 1);">
        <columns>
            <TableColumn fx:id="colRuolo" prefWidth="50" style="-fx-alignment: CENTER;" text="R" />
            <TableColumn fx:id="colNome" prefWidth="250" text="Calciatore" />
            <TableColumn fx:id="colFantavoto" prefWidth="100" style="-fx-alignment: CENTER; -fx-font-weight: bold;" text="Fantavoto" />
            <TableColumn fx:id="colStato" prefWidth="100" style="-fx-alignment: CENTER;" text="Stato" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Button onAction="#handleBack" style="-fx-background-color: #718096; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5; -fx-cursor: hand;" text="Indietro" />

</VBox>