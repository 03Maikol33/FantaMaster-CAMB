<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>

<View fx:controller="it.camb.fantamaster.controller.RegisterController"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="335.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@css/style.css"
      style="-fx-background-color: white;">
      
   <center>
      <VBox alignment="TOP_CENTER" maxWidth="280.0" spacing="25" BorderPane.alignment="CENTER" styleClass="auth-card">
         <padding>
            <Insets top="40" bottom="30" left="25" right="25"/>
         </padding>
         
         <StackPane>
            <Circle radius="40" fill="rgba(255,255,255,0.1)"/>
            <ImageView fitHeight="45.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                <image>
                  <Image url="@/images/FantaMaster-logo.png" />
               </image>
            </ImageView>
         </StackPane>
         
         <VBox spacing="8" alignment="CENTER">
            <Label text="CREA ACCOUNT" styleClass="modern-title"/>
            <Label text="Unisciti alla lega dei campioni" styleClass="subtitle"/>
         </VBox>

         <VBox spacing="12" style="-fx-padding: 10 0;">
            <TextField maxWidth="240.0" prefHeight="42.0" promptText="Username" fx:id="usernameField" 
                       styleClass="modern-textfield" onKeyTyped="#hideMessageLabel"/>
            <TextField maxWidth="240.0" prefHeight="42.0" promptText="Email" fx:id="emailField" 
                       styleClass="modern-textfield" onKeyTyped="#hideMessageLabel"/>
            <PasswordField maxWidth="240.0" prefHeight="42.0" promptText="Password" fx:id="passwordField" 
                           styleClass="modern-textfield" onKeyTyped="#hideMessageLabel"/>
         </VBox>

         <Label text="" fx:id="messageLabel" styleClass="error-text" visible="false" wrapText="true"/>

         <Button mnemonicParsing="false" styleClass="primary-button" maxWidth="240.0" prefHeight="45.0"
                 text="REGISTRATI" onAction="#handleRegister"/>

         <VBox alignment="CENTER" spacing="8" style="-fx-padding: 15 0 0 0;">
            <Label text="Hai giÃ  un account?" styleClass="hint-text"/>
            <Button mnemonicParsing="false" styleClass="text-button"
                    text="Accedi qui" onAction="#handleLogin" />
         </VBox>
      </VBox>
   </center>
</View>