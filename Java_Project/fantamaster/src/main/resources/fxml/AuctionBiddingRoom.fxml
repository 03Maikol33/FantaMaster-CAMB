<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="it.camb.fantamaster.controller.AuctionBiddingRoomController">

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="ASTA A BUSTA CHIUSA" />
    
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #edf2f7; -fx-padding: 20; -fx-background-radius: 15;">
        <Label fx:id="nomeGiocatoreLabel" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Nome Giocatore" />
        <HBox alignment="CENTER" spacing="10">
            <Label fx:id="ruoloLabel" style="-fx-font-size: 16; -fx-text-fill: #4a5568;" text="Ruolo" />
            <Label text="|" />
            <Label fx:id="squadraLabel" style="-fx-font-size: 16; -fx-text-fill: #4a5568;" text="Squadra" />
        </HBox>
    </VBox>

    <VBox alignment="CENTER" spacing="5">
        <Label text="Prezzo base listone" />
        <Label fx:id="prezzoLabel" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #48bb78;" text="1" />
    </VBox>

    <VBox fx:id="biddingControls" alignment="CENTER" spacing="15">
        <HBox alignment="CENTER" spacing="10">
            <Label text="La tua offerta:" style="-fx-font-weight: bold;" />
            <TextField fx:id="offertaField" prefWidth="80" promptText="FM" />
        </HBox>
        <VBox alignment="CENTER" spacing="10">
            <Button onAction="#handleInviaOfferta" styleClass="primary-button" text="CONFERMA OFFERTA" />
            <Button onAction="#handlePassa" style="-fx-background-color: #e53e3e; -fx-text-fill: white;" text="NON INTERESSATO" />
        </VBox>
    </VBox>

    <Label fx:id="statusLabel" styleClass="hint-text" text="In attesa delle offerte degli altri fantallenatori..." />

</VBox>