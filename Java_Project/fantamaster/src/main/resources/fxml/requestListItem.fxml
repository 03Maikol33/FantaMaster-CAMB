<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.camb.fantamaster.controller.RequestListItemController">

    <HBox spacing="10" alignment="CENTER_LEFT"
          style="-fx-padding: 10; -fx-background-color: #7a00766a; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #7a0076; -fx-border-width: 1;"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Icona lega -->
        <ImageView fx:id="leagueIcon" fitHeight="40" fitWidth="40" preserveRatio="true" />

        <!-- Info utente -->
        <VBox spacing="5" style="-fx-padding: 5;">
            <ImageView fx:id="userIcon" fitHeight="40" fitWidth="40" preserveRatio="true" />
            <Label fx:id="userName" style="-fx-font-weight: bold; -fx-text-fill: white;" />
            <Label fx:id="requestTimestamp" style="-fx-text-fill: white;" />
        </VBox>

        <!-- Pulsanti verticali -->
        <VBox spacing="8" alignment="CENTER_RIGHT" style="-fx-padding: 5;">
            <Label onMouseClicked="#handleApprove" fx:id="approveLabel" text="✔ Approva"
                   style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 6 12; -fx-background-radius: 6; -fx-cursor: hand;" />
            <Label onMouseClicked="#handleReject" fx:id="rejectLabel" text="✘ Rifiuta"
                   style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 6 12; -fx-background-radius: 6; -fx-cursor: hand;" />
        </VBox>
    </HBox>
</AnchorPane>
