<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.RankingGeneralController">

    <padding>
        <Insets top="15" right="25" bottom="15" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <Image url="@/icons/back-arrow-black.png" />
                </ImageView>
            </graphic>
        </Button>
        <VBox>
            <Label text="Classifica Generale" styleClass="modern-title" />
            <Label text="Il rendimento di tutti i partecipanti" styleClass="subtitle" />
        </VBox>
    </HBox>

    <TableView fx:id="rankingTable" styleClass="modern-card" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colPosizione" text="Pos" prefWidth="70" style="-fx-alignment: CENTER; -fx-font-weight: bold;"/>
            <TableColumn fx:id="colFantallenatore" text="Squadra e Allenatore" prefWidth="380"/>
            <TableColumn fx:id="colPunti" text="Punti Totali" prefWidth="130" style="-fx-alignment: CENTER; -fx-font-weight: bold; -fx-text-fill: #1e40af;"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>