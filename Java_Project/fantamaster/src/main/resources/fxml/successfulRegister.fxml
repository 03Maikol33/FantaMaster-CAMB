         </StackPane>
         
         <VBox spacing="15" alignment="CENTER">
            <Label fx:id="titleLabel" text="La Registrazione è avvenuta con successo!" 
                   wrapText="true" textAlignment="CENTER" styleClass="success-title"/>
            <Label text="Ora puoi accedere al tuo account e iniziare a giocare!" 
                   wrapText="true" textAlignment="CENTER" styleClass="subtitle"/>
         </VBox>

         <Button mnemonicParsing="false" styleClass="primary-button" 
