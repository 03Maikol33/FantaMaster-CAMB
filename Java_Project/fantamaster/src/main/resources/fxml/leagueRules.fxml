                </VBox>

            </VBox>
        </content>
    </ScrollPane>

    <Button fx:id="saveButton" maxWidth="Infinity" onAction="#handleSaveRules" prefHeight="45.0" styleClass="primary-button" text="SALVA REGOLE" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />

