<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="335.0" 
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="it.camb.fantamaster.controller.LeagueAdminScreenController"
            stylesheets="@css/style.css"
            style="-fx-background-color: linear-gradient(to bottom, #f5f7fa 0%, #c3cfe2 100%);">

    <top>
        <StackPane style="-fx-padding: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <HBox alignment="CENTER_LEFT" spacing="10">
                
                <Button onAction="#goBackToLeagueList" style="-fx-background-color: transparent; -fx-padding: 0 5;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="5">
                            <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                <image>
                                    <Image url="@/icons/back-arrow-black.png" />
                                </image>
                            </ImageView>
                            <Label text="Indietro" styleClass="navBarLabel"/>
                        </VBox>
                    </graphic>
                </Button>
 
                <VBox spacing="0" alignment="CENTER">
                    <ImageView fitHeight="35.0" preserveRatio="true">
                        <image>
                            <Image url="@/images/wideLogo.png" />
                        </image>
                    </ImageView>
                    <Label text="Admin Panel" style="-fx-font-size: 12; -fx-text-fill: #718096;"/>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <Button text="Condividi" onAction="#handleShareLeague" 
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 5 15; -fx-font-size: 12px; -fx-cursor: hand;"/>

            </HBox>
        </StackPane>
    </top>

    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER" 
                   style="-fx-background-color: transparent; -fx-padding: 10;"/>
    </center>

    <bottom>
        <VBox spacing="0">
            <Rectangle height="1" fill="linear-gradient(to right, transparent, #e2e8f0, transparent)"/>
            
            <HBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 15 0;">
                
                <Button onAction="#showRichieste" style="-fx-background-color: transparent; -fx-padding: 0 15;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="25" styleClass="navBarCircle"/>
                                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/richieste-icon.png" />
                                    </image>
                                </ImageView>
                            </StackPane>
                            <Label text="Richieste" styleClass="navBarLabel"/>
                        </VBox>
                    </graphic>
                </Button>

                <Button onAction="#showListone" style="-fx-background-color: transparent; -fx-padding: 0 15;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="25" styleClass="navBarCircle"/>
                                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/listone-icon.png" />
                                    </image>
                                </ImageView>
                            </StackPane>
                            <Label text="Listone" styleClass="navBarLabel"/>
                        </VBox>
                    </graphic>
                </Button>

                <Button onAction="#openAuction" style="-fx-background-color: transparent; -fx-padding: 0 15;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="25" styleClass="navBarCircle"/>
                                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/asta-icon.png" />
                                    </image>
                                </ImageView>
                            </StackPane>
                            <Label text="Asta" styleClass="navBarLabel"/>
                        </VBox>
                    </graphic>
                </Button>

                <Button onAction="#openChat" style="-fx-background-color: transparent; -fx-padding: 0 15;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="25" styleClass="navBarCircle"/>
                                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/chat-icon.png" /> 
                                    </image>
                                </ImageView>
                            </StackPane>
                            <Label text="Chat" styleClass="navBarLabel"/>
                        </VBox>
                    </graphic>
                </Button>

                <Button onAction="#showImpostazioniLega" style="-fx-background-color: transparent; -fx-padding: 0 15;">
                    <graphic>
                        <VBox alignment="CENTER" spacing="5">
                            <StackPane>
                                <Circle radius="25" styleClass="navBarCircle"/>
                                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                    <image>
                                        <Image url="@/icons/impostazioni-icon.png" />
                                    </image>
                                </ImageView>
                            </StackPane>
                            <Label text="Opzioni" styleClass="navBarLabel"/>
                        </VBox>
                    </graphic>
                </Button>

            </HBox>
        </VBox>
    </bottom>
</BorderPane>