<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>

<VBox prefHeight="580.0" prefWidth="320.0" spacing="5" style="-fx-background-color: #f8fafc; -fx-padding: 8;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.camb.fantamaster.controller.FormationController">
    <HBox alignment="CENTER_LEFT" spacing="8">
        <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <ImageView fitHeight="15.0" fitWidth="15.0" preserveRatio="true">
                    <Image url="@/icons/back-arrow-black.png" />
                </ImageView>
            </graphic>
        </Button>
        <VBox HBox.hgrow="ALWAYS">
            <Label fx:id="leagueNameLabel" text="Lega" textFill="#1e293b" style="-fx-font-weight: bold;" />
            <Label text="Tasto destro -> Capitano" textFill="#64748b" style="-fx-font-size: 8;" />
        </VBox>
        <ComboBox fx:id="moduleComboBox" prefWidth="75.0" style="-fx-background-color: white; -fx-border-color: #cbd5e1; -fx-border-radius: 5;" />
    </HBox>

    <AnchorPane fx:id="pitchPane" prefHeight="240.0" style="-fx-background-color: #276749; -fx-background-radius: 10; -fx-border-color: rgba(0,0,0,0.1); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Pane layoutY="120" prefHeight="1" prefWidth="300" style="-fx-background-color: rgba(255,255,255,0.1);" />
    </AnchorPane>

    <VBox spacing="2">
        <Label text="Panchina (Trascina qui)" textFill="#16a34a" style="-fx-font-size: 9; -fx-font-weight: bold;" />
        <ScrollPane fitToHeight="true" minHeight="75.0" style="-fx-background: white; -fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8;">
            <HBox fx:id="benchContainer" minWidth="300" spacing="8" style="-fx-padding: 5; -fx-background-color: white;" />
        </ScrollPane>
    </VBox>

    <VBox spacing="2" VBox.vgrow="ALWAYS">
        <HBox>
            <Label text="Rosa" textFill="#1e293b" style="-fx-font-size: 9;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="countLabel" text="0/11" textFill="#16a34a" style="-fx-font-weight: bold;" />
        </HBox>
        <ScrollPane fitToHeight="true" minHeight="85.0" style="-fx-background: white; -fx-background-color: white; -fx-border-color: #e2e8f0; -fx-border-radius: 8;">
            <HBox fx:id="availableContainer" minWidth="300" spacing="8" style="-fx-padding: 5; -fx-background-color: white;" />
        </ScrollPane>
    </VBox>

    <VBox alignment="CENTER" spacing="2">
        <Label fx:id="saveFeedbackLabel" style="-fx-font-size: 10;" />
        <Label fx:id="errorLabel" visible="false" textFill="#e53e3e" style="-fx-font-size: 10;" />
        <Button onAction="#handleSaveFormation" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: #1e40af; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 18; -fx-cursor: hand;" text="SALVA" />
    </VBox>
</VBox>