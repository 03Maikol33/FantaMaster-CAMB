<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="it.camb.fantamaster.controller.SquadraController" 
      style="-fx-padding: 15; -fx-background-color: transparent;">
    
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <StackPane>
            <Circle radius="30" fill="#f0f2f5"/>
            <ImageView fx:id="logoImageView" fitHeight="45.0" fitWidth="45.0" preserveRatio="true">
                <Image url="@/images/userDefaultPic.png"/>
            </ImageView>
        </StackPane>
        
        <VBox spacing="2" HBox.hgrow="ALWAYS">
            <Label fx:id="nomeSquadraLabel" text="La mia Squadra" 
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
            <Label text="Fantallenatore" style="-fx-font-size: 12; -fx-text-fill: #718096;"/>
        </VBox>
        
        <Button onAction="#handleModificaSquadra" style="-fx-background-color: transparent; -fx-cursor: hand;">
            <graphic>
                <Label text="âœŽ" style="-fx-font-size: 22; -fx-text-fill: #667eea;"/>
            </graphic>
        </Button>
    </HBox>

    <TableView fx:id="giocatoriTable" VBox.vgrow="ALWAYS" styleClass="modern-table" prefHeight="400">
        <columns>
            <TableColumn fx:id="nomeCol" text="Nome" prefWidth="160"/>
            <TableColumn fx:id="ruoloCol" text="Ruolo" prefWidth="60"/>
            <TableColumn fx:id="valoreCol" text="Valore" prefWidth="70"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <placeholder>
            <Label text="Non hai ancora acquistato giocatori."/>
        </placeholder>
    </TableView>
</VBox>