<View fx:controller="it.camb.fantamaster.controller.CreateLeagueController"
    maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
    prefHeight="600.0" prefWidth="335.0"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    stylesheets="@css/style.css"
    style="-fx-background-color: white;">

   <center>
    <VBox alignment="TOP_CENTER" maxWidth="300.0" spacing="20" BorderPane.alignment="CENTER" styleClass="auth-card">
       <padding>
        <Insets top="30" bottom="30" left="25" right="25"/>
       </padding>

       <StackPane>
        <Circle radius="40" fill="rgba(255,255,255,0.1)"/>
        <ImageView fx:id="leagueLogoView" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
           <image>
            <Image url="@/images/leagueDefaultPic.png" />
           </image>
        </ImageView>
       </StackPane>

       <HBox spacing="10" alignment="CENTER">
        <Button fx:id="pickImageButton" text="Scegli immagine" onAction="#handlePickImage" styleClass="text-button"/>
        <Label fx:id="imageNameLabel" text="Nessuna immagine selezionata" styleClass="hint-text" wrapText="true" />
       </HBox>

       <TextField fx:id="leagueNameField" maxWidth="260.0" prefHeight="42.0" promptText="Nome della lega"
              styleClass="modern-textfield" onKeyTyped="#hideMessageLabel"/>

       <ComboBox fx:id="gameModeComboBox" maxWidth="260.0" prefHeight="42.0" promptText="Seleziona ModalitÃ "
                 styleClass="modern-textfield" onAction="#handleGameModeSelection"/>

       <VBox spacing="6" alignment="CENTER">
        <TextField fx:id="maxParticipantsField" maxWidth="260.0" prefHeight="42.0" promptText="Num. max. di partecipanti (intero pari)"
                styleClass="modern-textfield" onKeyTyped="#hideMessageLabel"/>
       </VBox>

       <Label text="" fx:id="messageLabel" styleClass="error-text" visible="false" wrapText="true"/>

       <Button mnemonicParsing="false" fx:id="createLeagueButton" styleClass="primary-button" maxWidth="240.0" prefHeight="45.0"
             text="CREA LEGA" onAction="#handleCreateLeague"/>

       <VBox alignment="CENTER" spacing="8" style="-fx-padding: 10 0 0 0;">
        <Label text="Torna alla schermata iniziale" styleClass="hint-text"/>
        <Button mnemonicParsing="false" styleClass="text-button" text="Annulla" onAction="#handleCancel"/>
       </VBox>
    </VBox>
   </center>
</View>